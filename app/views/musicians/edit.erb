<h2>Edit Musician</h2>

<form method="POST" action="/musicians/<%= @musician.id %>/edit">
    <p>Name: <input type="text" name="musician[name]" value="<%= @musician.name %>"></p>
    <input id="hidden" type="hidden" name="_method" value="patch">
    <div class="row">
        <div class="column left">
            <h3>Section:</h3>
            <% @sections.each do |section| %>
                <input type="radio" id="<%= section.id %>" name="musician[section]" value="<%= section.name %>" <%='checked' if @musician.section == section %>>
                <label for="<%= section.id %>"><%= section.name %></label><br>
            <% end %>
        </div>

        <div class="column right">
            <h3>Programs Played:</h3>
            <% @programs.each do |program| %>
                <input type="checkbox" id="<%= program.id %>" name="musician[programs][]" value="<%= program.name %>" <%='checked' if @musician.programs.include?(program) %>>
                <label for="<%= program.id %>"><%= program.name %></label><br>
            <% end %>
        </div>
    </div>
    <br>
    <p class="submit"><input type="submit" value="edit"></p>
</form>


