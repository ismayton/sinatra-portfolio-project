<h2>Edit Section</h2>

<form method="POST" action="/sections/<%= @section.id %>/edit">
    <p>Name: <input type="text" name="section[name]" value="<%= @section.name %>"></p>
    <input id="hidden" type="hidden" name="_method" value="patch">
        
    <h3>Musicians:</h3>
        <% @musicians.each do |musician| %>
            <input type="checkbox" id="<%= musician.id %>" name="section[musicians][]" value="<%= musician.name %>" <%='checked' if @section.musicians.include?(musician) %>>
            <label for="<%= musician.id %>"><%= musician.name %></label><br>
        <% end %>
    <br>
    <p class="submit"><input type="submit" value="edit"></p>
</form>


