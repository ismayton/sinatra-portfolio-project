<h2>Create a New Section</h2>

<form method="POST" action="/sections/new">
    <p>Name: <input type="text" name="section[name]"></p>
    
        <h3>Musicians:</h3>
        <% @musicians.each do |musician| %>
            <input type="checkbox" id="<%= musician.id %>" name="section[musicians][]" value="<%= musician.name %>">
            <label for="<%= musician.id %>"><%= musician.name %></label><br>
        <% end %>

    <br>
    <p class="submit"><input type="submit" value="create"></p>
</form>
